{
  "extends": "@dojo/tsconfig/node.json",
  "compilerOptions": {
    "lib": ["ES2022"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "module": "ESNext",
    "moduleResolution": "bundler",
    "composite": true,
    "incremental": true,
    "types": ["bun-types", "node"],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
