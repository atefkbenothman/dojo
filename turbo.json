{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NODE_ENV",
        "BACKEND_URL",
        "SKIP_ENV_VALIDATION",
        "GROQ_API_KEY_FALLBACK",
        "CONVEX_URL",
        "ENCRYPTION_SECRET",
        "NEXT_PUBLIC_ENCRYPTION_SECRET"
      ]
    },
    "dev": {
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "cache": false
    },
    "start": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "format": {
      "outputs": [],
      "cache": false
    }
  }
}
